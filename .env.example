# ==============================================
# Docker Compose Configuration (Root .env)
# ==============================================
# Renaming this file to `.env` in the root directory will allow
# docker-compose to automatically pick up these values.

# -----------------
# Ports
# -----------------
BACKEND_PORT=8000
FRONTEND_PORT=3000

# -----------------
# URLs (Production)
# -----------------
# The URL where the frontend can reach the backend API (Browser -> Backend)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
# The URL where the frontend can reach the WebSocket (Browser -> Backend)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# The URL where the Backend can reach the Frontend (for CORS security)
ALLOWED_ORIGINS=["http://localhost:3000"]

# -----------------
# Services (Internal Docker Network)
# -----------------
# You usually don't need to change these if using the provided docker-compose files.
MONGODB_URL=mongodb://mongo:27017
QDRANT_URL=http://qdrant:6333
REDIS_URL=redis://redis:6379
OLLAMA_BASE_URL=http://ollama:11434
UNSTRUCTURED_URL=http://unstructured:8000
